{
    "name": "yamadashy/phpstan-formatter-friendly",
    "type": "phpstan-extension",
    "description": "Simple error formatter for PHPStan that display code frame",
    "keywords": ["package", "php", "phpstan", "static analysis"],
    "license": "MIT",
    "authors": [
        {
            "name": "Kazuki Yamada",
            "email": "koukun0120@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "phpstan/phpstan": "^0.12 || ^1.0"
    },
    "require-dev": {
        "grifart/phpstan-oneline": "^0.4.2",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^8.5.26"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Yamadashy\\PhpStanFormatterFriendly\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "extra": {
        "phpstan": {
            "includes": ["extension.neon"]
        }
    },
    "scripts": {
        "test": [
            "@test:types",
            "@test:unit"
        ],
        "test:unit": "phpunit",
        "test:types": "phpstan analyze -c phpstan.neon.dist --error-format friendly",
        "test:types-raw": "phpstan analyze -c phpstan.neon.dist --error-format raw",
        "test:types-table": "phpstan analyze -c phpstan.neon.dist --error-format table",
        "test:types-oneline": "phpstan analyze -c phpstan.neon.dist --error-format oneline"
    }
}
